<Window x:Class="LoggerReader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoggerReader"
        xmlns:vm="clr-namespace:LoggerReader.ViewModels"
        xmlns:viewModels="clr-namespace:AlfaLoggerRead.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance d:Type = {x:Type viewModels:MainViewModel}}"
        Title="{Binding Title}"
        Height="450"
        Width="800">
    <Grid Margin="0,0,0,-6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel 
            Orientation="Horizontal"
            Grid.Column="0"
            Grid.Row="0"
            Margin="10"
            Grid.ColumnSpan="3">
            <DockPanel>
                <TextBlock DockPanel.Dock="Top">
                    Название
                </TextBlock>
                <TextBox 
                    DockPanel.Dock="Bottom"
                    Text="{Binding FilterPublishName}">
                </TextBox>
            </DockPanel>

            <DockPanel>
                <TextBlock DockPanel.Dock="Top">
                    Сообщение
                </TextBlock>
                <TextBox 
                    DockPanel.Dock="Bottom"
                    Text="{Binding FilterMessage}">
                </TextBox>
            </DockPanel>

            <DockPanel>
                <TextBlock DockPanel.Dock="Top">
                    Тип
                </TextBlock>
                <TextBox 
                    DockPanel.Dock="Bottom"
                    Text="{Binding FilterType}">
                </TextBox>
            </DockPanel>
        </StackPanel>



        <ScrollViewer 
            Margin="10"
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="3">
            <DataGrid
                ItemsSource="{Binding Logs}">
            </DataGrid>
        </ScrollViewer>

        <StackPanel
            VerticalAlignment="Bottom"
            HorizontalAlignment="Left"
            Margin="10"
            Orientation="Vertical"
            Grid.Column="0"
            Grid.Row="2">
            <Button Command="{Binding BackCommand}">
                Назад
            </Button>
        </StackPanel>

        <StackPanel
            VerticalAlignment="Bottom"
            HorizontalAlignment="Right"
            Margin="10"
            Orientation="Vertical"
            Grid.Column="2"
            Grid.Row="2">
            <Button Command="{Binding NextCommand}">
                Далее
            </Button>
        </StackPanel>

        <StackPanel
            VerticalAlignment="Bottom"
            HorizontalAlignment="Center"
            Margin="10"
            Orientation="Horizontal"
            Grid.Column="1"
            Grid.Row="2">
            <TextBlock Text="Страница №"/>
            <TextBlock Text="{Binding NumPage}"/>
            <TextBlock Text="Пагинация"/>
            <TextBox Text="{Binding SizePage}"
                MinWidth="40"/>
            <Button Command="{Binding RefreshCommand}">
                Обновить
            </Button>
        </StackPanel>





    </Grid>
</Window>
