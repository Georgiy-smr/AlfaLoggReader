<Window x:Class="LoggerReader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoggerReader"
        xmlns:vm="clr-namespace:LoggerReader.ViewModels"
        xmlns:viewModels="clr-namespace:AlfaLoggerRead.ViewModels"
        xmlns:entities="clr-namespace:Data.Entities;assembly=Data"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance d:Type = {x:Type viewModels:MainViewModel}}"
        Title="{Binding Title}"
        Height="450"
        Width="800">

    <Grid Margin="0,0,0,-6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel 
            Orientation="Horizontal"
            Grid.Column="0"
            Grid.Row="0"
            Margin="10"
            Grid.ColumnSpan="3">
            <DockPanel Margin="10">
                <TextBlock DockPanel.Dock="Top"
                           FontSize="30">
                    Название
                </TextBlock>
                <TextBox 
                    FontSize="30"
                    MinWidth="100"
                    DockPanel.Dock="Bottom"
                    Text="{Binding FilterPublishName}">
                </TextBox>
            </DockPanel>

            <DockPanel  Margin="10">
                <TextBlock DockPanel.Dock="Top"
                           FontSize="30">
                    Сообщение
                </TextBlock>
                <TextBox 
                    FontSize="30"
                    MinWidth="100"
                    DockPanel.Dock="Bottom"
                    Text="{Binding FilterMessage}">
                </TextBox>
            </DockPanel>

            <DockPanel  Margin="10">
                <TextBlock DockPanel.Dock="Top"
                           FontSize="30">
                    Тип
                </TextBlock>
                <TextBox 
                    MinWidth="100"
                    FontSize="30"
                    DockPanel.Dock="Bottom"
                    Text="{Binding FilterType}">
                </TextBox>
            </DockPanel>

            <ToggleButton Margin="10" 
                          VerticalContentAlignment="Stretch"
                          HorizontalContentAlignment="Stretch"
                          IsChecked="{Binding StartDateTimeIsChecked}">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top"
                               FontSize="30">
                        От
                    </TextBlock>
                    <xctk:DateTimePicker 
                        DockPanel.Dock="Bottom" 
                        Text="{Binding DateTimeStartString}">
                    </xctk:DateTimePicker>
                </DockPanel>
            </ToggleButton>

            <ToggleButton 
                IsChecked="{Binding FinishDateTimeIsChecked}"
                Margin="10"
                HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
                <DockPanel  >
                    <TextBlock DockPanel.Dock="Top"
                               FontSize="30">
                        До
                    </TextBlock>
                    <xctk:DateTimePicker 
                        DockPanel.Dock="Bottom"
                        Text="{Binding DateTimeFinishToString}">
                    </xctk:DateTimePicker>
                </DockPanel>
            </ToggleButton>

     

        
        </StackPanel>

        <ScrollViewer 
            Margin="10"
            Grid.Row="1"
            FontSize="22"
            Grid.Column="0"
            Grid.ColumnSpan="3">
            <DataGrid
                ColumnWidth="*"
                HorizontalContentAlignment="Right"
                AutoGenerateColumns="False"
                GridLinesVisibility="Vertical"
                VerticalGridLinesBrush="DarkGray"
                AlternatingRowBackground="LightGray"
                ItemsSource="{Binding Logs}" Background="#FFAD9F9F">
                <DataGrid.Resources>
                    <Style TargetType="DataGridRow">
                        <Setter Property="ToolTip" Value="{Binding Message}" />
                    </Style>
                </DataGrid.Resources>
                <DataGrid.Columns>
                    <DataGridTemplateColumn
                        Width="250"
                        Header="Дата"
                        SortMemberPath="Date">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate DataType="{x:Type entities:Log}">
                                <TextBlock Text="{Binding Date, StringFormat=dd.MM.yyyy HH:mm:ss.fff}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Header = "Публикатор" 
                                        Binding = "{Binding Path=EventPublishName}" 
                                        IsReadOnly = "False"/>
  
                    <DataGridTextColumn Header = "Тип события" 
                                        Binding = "{Binding Path=TypeEvent}" 
                                        IsReadOnly = "False"/>

                    <DataGridTextColumn Header = "Контекст" 
                                        Binding = "{Binding Path=Message}" 
                                        IsReadOnly = "False"/>
                </DataGrid.Columns>

            </DataGrid>
        </ScrollViewer>

        <StackPanel
            VerticalAlignment="Bottom"
            HorizontalAlignment="Left"
            Margin="10"
            Orientation="Vertical"
            Grid.Column="0"
            Grid.Row="2">
            <Button Command="{Binding BackCommand}"
                    FontSize="30">
                Назад
            </Button>
        </StackPanel>

        <StackPanel
            VerticalAlignment="Bottom"
            HorizontalAlignment="Right"
            Margin="10"
            Orientation="Vertical"
            Grid.Column="2"
            Grid.Row="2">
            <Button Command="{Binding NextCommand}"
                    FontSize="30">
                Далее
            </Button>
        </StackPanel>

        <StackPanel
            VerticalAlignment="Bottom"
            HorizontalAlignment="Center"
            Margin="10"
            Orientation="Horizontal"
            Grid.Column="1"
            Grid.Row="2">
            <TextBlock Text="Страница №" FontSize="20" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding NumPage}" 
                       FontSize="25" 
                       VerticalAlignment="Center"
                       Margin="0 0 10 0"/>
            <TextBlock Text="Показать"
                       FontSize="20"
                       VerticalAlignment="Center"
                     />
            <TextBox Text="{Binding SizePage}"
                     FontSize="30"
                     VerticalAlignment="Center"
                MinWidth="40"/>
            <Button Command="{Binding RefreshCommand}" FontSize="30" Margin="10 0 0 0">
                Обновить
            </Button>

            <Button Command="{Binding ExportToXlsxCommand}" FontSize="30" Margin="10 0 0 0">
                to .xlsx
            </Button>
        </StackPanel>





    </Grid>
</Window>
